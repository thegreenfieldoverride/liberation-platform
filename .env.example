# Liberation Platform Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=production
ENVIRONMENT=production
PORT=3000

# Domain configuration
DOMAIN=thegreenfieldoverride.com
STAGING_DOMAIN=staging.thegreenfieldoverride.com

# Database (for future use)
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=liberation_platform
# POSTGRES_USER=liberation
# POSTGRES_PASSWORD=your_secure_password

# Redis (for future use)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Security
# JWT_SECRET=your_jwt_secret_here
# ENCRYPTION_KEY=your_encryption_key_here

# Third-party services (future)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password

# Analytics (privacy-friendly only)
# PLAUSIBLE_DOMAIN=thegreenfieldoverride.com

# Backup configuration
# BACKUP_BUCKET=liberation-platform-backups
# BACKUP_ACCESS_KEY=your_backup_access_key
# BACKUP_SECRET_KEY=your_backup_secret_key