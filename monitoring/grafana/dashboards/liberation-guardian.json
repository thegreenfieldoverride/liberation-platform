{
  "dashboard": {
    "id": null,
    "title": "Liberation Guardian Monitoring",
    "tags": ["liberation", "guardian", "dependency-automation"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Guardian Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"liberation-guardian\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "none",
            "mappings": [
              {"options": {"0": {"text": "DOWN"}}, "type": "value"},
              {"options": {"1": {"text": "UP"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Requests Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"liberation-guardian\"}[5m])",
            "refId": "A",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "AI Client Status",
        "type": "stat",
        "targets": [
          {
            "expr": "ai_client_healthy{job=\"liberation-guardian\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            },
            "unit": "none",
            "mappings": [
              {"options": {"0": {"text": "UNHEALTHY"}}, "type": "value"},
              {"options": {"1": {"text": "HEALTHY"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"liberation-guardian\"}",
            "refId": "A",
            "legendFormat": "Memory Usage"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {"unit": "bytes"}
        ]
      },
      {
        "id": 5,
        "title": "HTTP Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"liberation-guardian\"}[5m]))",
            "refId": "A",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket{job=\"liberation-guardian\"}[5m]))",
            "refId": "B",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 16},
        "yAxes": [
          {"unit": "s"}
        ]
      },
      {
        "id": 6,
        "title": "Dependency Analysis Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(dependency_analysis_total{job=\"liberation-guardian\"}[5m])",
            "refId": "A",
            "legendFormat": "Analysis Events/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Redis Connection Status",
        "type": "stat",
        "targets": [
          {
            "expr": "redis_connected_clients{job=\"redis\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "green", "value": 2}
              ]
            },
            "unit": "none"
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "5s",
    "version": 1
  }
}