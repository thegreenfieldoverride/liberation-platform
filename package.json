{
  "name": "@greenfieldoverride/liberation-platform",
  "version": "1.0.0",
  "private": true,
  "description": "AI-powered liberation tools and platform for breaking free from corporate exploitation",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm --filter @greenfieldoverride/types run build && pnpm --filter @greenfieldoverride/user-context run build && pnpm -r run build",
    "dev": "pnpm --filter greenfield-override-web run dev",
    "test": "pnpm -r run test",
    "lint": "pnpm -r run lint",
    "publish:ui": "pnpm --filter @greenfieldoverride/liberation-ui publish",
    "publish:runway": "pnpm --filter @greenfieldoverride/runway-calculator publish",
    "publish:hourly-wage": "pnpm --filter @greenfieldoverride/real-hourly-wage publish",
    "publish:ai-copilot": "pnpm --filter @greenfieldoverride/ai-copilot publish",
    "publish:cognitive-debt": "pnpm --filter @greenfieldoverride/cognitive-debt-assessment publish",
    "publish:values-matcher": "pnpm --filter @greenfieldoverride/values-vocation-matcher publish",
    "publish:user-context": "pnpm --filter @greenfieldoverride/user-context publish",
    "publish:small-bets": "pnpm --filter @greenfieldoverride/small-bets-portfolio publish",
    "publish:types": "pnpm --filter @greenfieldoverride/shared-types publish",
    "publish:all": "pnpm publish:types && pnpm publish:user-context && pnpm publish:ui && pnpm publish:runway && pnpm publish:hourly-wage && pnpm publish:ai-copilot && pnpm publish:cognitive-debt && pnpm publish:values-matcher && pnpm publish:small-bets"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "financial-freedom",
    "burnout-recovery",
    "liberation-tools",
    "privacy-first"
  ],
  "author": "The Greenfield Override",
  "license": "Liberation-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/thegreenfieldoverride/liberation-platform.git"
  },
  "homepage": "https://github.com/thegreenfieldoverride/liberation-platform#readme",
  "bugs": {
    "url": "https://github.com/thegreenfieldoverride/liberation-platform/issues"
  }
}